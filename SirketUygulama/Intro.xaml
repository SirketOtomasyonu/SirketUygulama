<Window x:Class="SirketUygulama.Intro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SirketUygulama"
        mc:Ignorable="d"
        Title="Intro" Height="300" Width="300">
    <Window.Resources>
        <Storyboard x:Key="OnLoaded1"/>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource OnLoaded1}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <ProgressBar Name="prg" HorizontalAlignment="Left" Height="10" Margin="93,180,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="label" Content="Hoş Geldiniz&#xD;&#xA;&#xD;&#xA;" HorizontalAlignment="Left" Margin="84,111,0,0" VerticalAlignment="Top" Width="122"/>

    </Grid>
</Window>
